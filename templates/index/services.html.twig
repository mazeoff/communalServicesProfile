{% extends 'base.html.twig' %}

{% block body %}
    <style>
        .itemClass {
            text-decoration: none;
            color: #222222;
        }
        .itemClass:hover {
            text-decoration: none;
            color: #222222;
        }
    </style>
    <div class="example-wrapper">
        <div class="row">
            <div class="col">
                <h1 >{{ title }}</h1>
            </div>
            <div class="col col-lg-2 w-auto">
                <a href="#">Добавить</a>
            </div>
        </div>
        <hr>

        <div class="row">
            {% for item in items %}
                {% if item.subscription == true %}
                <div class="col-md-4">
                    <a href="{{ path('servicesItem', {'id': item.id}) }}" class="itemClass">
                        <div class="card mb-4 shadow-sm">
                            <div class="card-body">
                                <h4>{{ item.name }}</h4>
                                <p class="card-text">{{ item.unit }}</p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <h5>{{ item.price }} ₽</h5>
                                </div>
                                    <button type="button" class="btn btn-danger">Отписаться</button>
                            </div>
                        </div>
                    </a>
                </div>
                {% endif %}
            {% endfor %}
        </div>
        <hr>
        <h4>Итого: {{ totalCost }} ₽ / месяц</h4>
    </div>
{% endblock %}
