<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}{{title}}{% endblock %}</title>
        {#include bootstrap#}
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
        <script src="https://code.jquery.com/jquery-3.6.1.min.js" integrity="sha256-o88AwQnZB+VDvE9tvIXrMQaPlFFSUTR+nldQm1LuPXQ=" crossorigin="anonymous"></script>
        {#end include bootstrap#}
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>

    <header>
        <!-- Fixed navbar -->

        <nav class="navbar navbar-expand-lg navbar-dark fixed-top bg-dark">
            <div class="container">
                <a class="navbar-brand" href="/services">Коммунальные услуги</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarText">
                    <ul class="navbar-nav" style="margin-right: auto !important;">
    {#                    <li class="nav-item {{ app.request.get('_route') == 'index' ? 'active' }}">#}
    {#                                                    <a class="nav-link" href="{{ path('index') }}">Home</a>#}
    {#                    </li>#}
                        <li class="nav-item {{ app.request.get('_route') == 'services' ? 'active' }}">
                            <a class="nav-link" href="{{ path('services') }}">Услуги</a>
                        </li>
                        <li class="nav-item {{ app.request.get('_route') == 'transactions' ? 'active' }}">
                            <a class="nav-link" href="{{ path('transactions') }}">Операции</a>
                        </li>
                    </ul>
                    <span class="navbar-text">Баланс: {{ balance }} ₽</span>
                </div>
            </div>
        </nav>
    </header>
    <div class="mt-5">
        <main role="main" class="flex-shrink-0">
            <div class="container">
                <div class="mt-1">&nbsp;</div>
                <div class="mt-2">
                    {% block body %}{% endblock %}
                </div>
            </div>
        </main>
    </div>
    </body>
    {% block script %}{% endblock %}
</html>
